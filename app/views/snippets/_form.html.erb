<%= form_for @snippet do |f| %>

  <% if @snippet.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@snippet.errors.count, "error") %> prohibited
        this snippet from being saved:
      </h2>
      <ul>
        <% @snippet.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<div class="container">

  <fieldset class="form-group">
    <%= f.label :title %> <br>
    <%= f.text_field :title, class:"form-control" %>
  </fieldset>
  <fieldset class="form-group">
    <%= f.label :kind %>
    <%= f.collection_select :category_id, Category.order(:kind), :id, :kind %>
  </fieldset>
  <fieldset class="form-group">
    <%= f.label :work %><br>
    <%= f.text_area :work, rows: 5, cols: 40, class:"form-control"  %>
  </fieldset>
  <%= f.submit class: "btn btn-primary" %>
<% end %>
</div>
