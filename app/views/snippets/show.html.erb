<div class="container">
<h1><%= @snippet.title %></h1>

<h4>Language: <%= @snippet.category.kind %> </h4>

<% if @snippet.category.kind == "Markdown" %>
    <%= markdown(@snippet.work) %>
  <% else %>
    <% html = CodeRay.scan(@snippet.work, @snippet.category.kind).div(:line_numbers => :table) %>
    <%= html.html_safe %>
  <% end %>
<br>

<%= link_to "Back to Index", snippets_path %>
</div>
